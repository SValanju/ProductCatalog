@model DemoApp.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoginPage</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        #loginDiv {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>
<body class="bg-light">
    <div class="vh-100">
        <div id="loginDiv" class="bg-white shadow-lg border border-3 rounded p-5 col-md-3">
            <h1 class="mb-5 text-center">Login Page</h1>
            @using (Html.BeginForm("LoginPage", "Home", FormMethod.Post))
            {
                <div class="mb-3">
                    @Html.LabelFor(m => m.UserName, new { @class = "fw-bold" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "fw-bold" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <button class="btn btn-primary w-100 my-3" type="submit">Submit</button>
            }

            @if (ViewData.ModelState["Validations"] != null && ViewData.ModelState["Validations"].Errors.Any())
            {
                <ul class="errors">
                    @foreach (var error in ViewData.ModelState["Validations"].Errors)
                    {
                        <li class="text-danger">@error.ErrorMessage</li>
                    }
                </ul>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
